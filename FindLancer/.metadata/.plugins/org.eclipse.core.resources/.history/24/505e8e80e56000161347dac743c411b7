public class Main {
	public static void main(String[] args) {
		 
		 int dia =0;
		 String resposta = null;
		 
		 switch(dia){
		 	case 1:
		 		resposta+="Domingo";
		 		break;
		 	case 2:
		 		resposta+="Segunda-feira";
		 		break;
		 	case 3:
		 		resposta+="terça-feira";
		 		break;
		 	case 4:
		 		resposta+="quarta-feira";
		 		break;
		 	case 5:
		 		resposta+="quinta-feira";
		 		break;
		 	case 6:
		 		resposta+="sexta-feira";
		 		break;
		 	case 7:
		 		resposta+="sábado";
		 		break;
		 }
		 
		 if( (dia==1) || (dia==7) ){
			 
		 }
	}
	
}
