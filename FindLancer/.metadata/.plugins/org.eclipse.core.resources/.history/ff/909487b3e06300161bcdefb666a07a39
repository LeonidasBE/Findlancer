package br.com.findlancer.sql;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import br.com.findlancer.model.Empresa;

public class EmpresaDAO {
		
	Connection conexaoDBUsuario = Conexao.conectar();
	public void Cadastrar(Empresa empresa){
		try {
			String sql = "insert into empresas(bairro,cep,cidade,descricao,email,endereco,nome,pessoaContato,ramoAtividade,razaoSocial,senha,telefone,qtdfuncionarios)"
					+ "values(?,?,?,?,?,?,?,?,?,?,?,?,?,?)";
			
			PreparedStatement statement = conexaoDBUsuario.prepareStatement(sql);
			statement.setString(1, empresa.getBairro() );
			statement.setString(2, empresa.getCep() );
			statement.setString(5, empresa.getDescricao() );
			statement.setString(6, empresa.getEmail() );
			statement.setString(7, empresa.getEndereco() );
			statement.setString(8, empresa.getNome() );
			statement.setString(9, empresa.getPessoaContato() );
			statement.setString(10, empresa.getRamoAtividade() );
			statement.setString(11, empresa.getRazaoSocial() );
			statement.setString(12, empresa.getSenha() );
			statement.setString(13, empresa.getTelefone() );
			statement.setInt(14, empresa.getQtdfuncionarios() );
			statement.execute();
			statement.close();
			
			System.out.println("Empresa cadastrada com sucesso");
			
		} catch (SQLException e) {
			System.out.println("Erro ao tentar cadastrar usuario");
		}
		
	}
}
